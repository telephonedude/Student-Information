<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="Midterm_Act.delwindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Delete Student Information"
	Height="250"
	Width="250"
	WindowStartupLocation="CenterScreen"
ResizeMode="NoResize">
	<Grid>
		<Grid.Background>
			<ImageBrush
				ImageSource="/Pictures/searchinfo1.png"
				Stretch="UniformToFill" />
		</Grid.Background>
		<TextBox
			Height="32"
			Grid.Column="0"
			Grid.Row="0"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Top"
			Margin="32,50,32,0"
			x:Name="searchbox" 
		 PreviewTextInput="searchbox_preview"
		/>
		<Button
			Width="85"
			Grid.Column="0"
			Grid.Row="0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Margin="77.5,109,0,0"
			Height="35"
			Content="Search"
			x:Name="button1"
			Click="button1_Click" />
		<Button
			Width="87"
			Height="35"
			Grid.Column="0"
			Grid.Row="0"
			HorizontalAlignment="Left"
			VerticalAlignment="Bottom"
			Margin="77,0,0,24"
			x:Name="cancel"
			Content="Cancel" />
		<TextBlock
			Height="29"
			Grid.Column="0"
			Grid.Row="0"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Top"
			Margin="32,27.5,50,0">
			<Run
				Text="Please input ID Number" />
		</TextBlock>
	</Grid>
</Window>